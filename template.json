
{
	    
	"global":{
		"sets":{
			"keys":"|sourceValue|",
			"vals":"|targetValue|",			
			"sep":",",			
			"bigTableName":"|bigTableName|",
			"smaTableName":"|smaTableName|"
		},
		"defaults":{
			"defaultBigTableName":"userTable",
			"defaultSmaTableName":"ut",			
			"sep":",",
			"defaultFields":"user_id,user_name,user_password,user_email"
		},
		"key_str_replace":{
			"package":"",
			"_data":""
			},
		"val_str_replace":{
			"package":"",
			"_data":""
			},

		"ifNoDefinedId":{
			"id":"id",
			"vId":"userId"
		}

		
	},
	"templates":{
		"php":{		
			"postgress":{
				
					"find":{					
						"HEAD01":"$query = <<<NATIVE_SQL ",
						"HEAD02":"$query = SELECT",
						"BODY01":"((rep_all:|smaTableName|.|key| AS |val||sep_in:,|))",
						"FOOT01":"FROM |bigTableName| |smaTableName|",
						"FOOT02":"WHERE |smaTableName|.|id| =:$|id| ",
						"FOOT03":"NATIVE_SQL;"				
					},
					"search":{
						"HEAD01":"$query = <<<NATIVE_SQL ",
						"HEAD02":"SELECT",
						"BODY01":"((rep_all:|smaTableName|.|key| AS |val||sep_in:,|))",
						"FOOT01":"FROM |bigTableName| |smaTableName|",						
						"FOOT02":"NATIVE_SQL;"				
					},
					"insert":{			   
						"CONF01":"((NO_ID_IN_REPEAT))",
						"HEAD01":"$query = <<<NATIVE_SQL",
						"HEAD02":"INSERT |bigTableName| (",
						"BODY01":"((rep_all:|key||sep_in:,|))",
						"BODY02":") VALUES (",
						"BODY03":"((rep_all:|val||sep_in:,|))",
						"BODY04":"$this->execute($query,[",						
						"BODY05":"((rep_all:new PDOParam(':|val|',DataType::STRING,$classFactory()->|val||sep_in:,|))",
						"FOOT01":"] );"
					},
					"save":{			   
						"CONF01":"((NO_ID_IN_REPEAT))",
						"HEAD01":"$query = <<<NATIVE_SQL",
						"HEAD02":"UPDATE |bigTableName| ",
						"HEAD03":"SET",
						"BODY01":"((rep_all:|key|=:|val||sep_in:,|))",
						"BODY02":"WHERE |smaTableName|.|id| =:$|vId| ",
						"BODY03":"NATIVE_SQL;",
						"BODY04":"$this->execute($query,[",						
						"BODY05":"((rep_all:new PDOParam(':|val|',DataType::STRING,$classFactory->|val||sep_in:,|))",
						"FOOT01":"] );"
					}

				
			}		
		}
		
	}

}

  